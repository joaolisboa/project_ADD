<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ipleiria.project.add.MainActivity">

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToSettings"
        android:text="Settings" />

    <Button
        android:layout_below="@id/settingsButton"
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="downloadFile"
        android:text="Download" />

    <!--<Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="searchFile"
        android:text="Search" />-->

    <Button
        android:layout_below="@id/download"
        android:id="@+id/listCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectCriteria"
        android:text="Criterias" />

    <!--<Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteFile"
        android:text="Delete" />-->

    <Button
        android:layout_below="@id/listCategories"
        android:id="@+id/listFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="listFiles"
        android:text="listFiles" />

    <!--<Button
        android:layout_below="@id/googleSignIn"
        android:id="@+id/readXLS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="readExcel"
        android:text="Read Excel" />-->

</RelativeLayout>
