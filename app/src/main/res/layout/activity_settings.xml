<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    tools:context="ipleiria.project.add.SettingsActivity">

    <LinearLayout
        android:id="@+id/account_info"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:onClick="googleSignIn">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/user_profile_picture"
            app:srcCompat="@drawable/ic_profile_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:paddingTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_name"
                android:layout_width="match_parent"
                android:text="Anonymous"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/account_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_sign_in_helper"
                android:textSize="14sp"/>
        </LinearLayout>


        <ImageView
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/open_google_sign_in"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </LinearLayout>

    <View
        style="@style/Divider" />

    <LinearLayout
        android:id="@+id/dropbox"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/dropbox_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:layout_marginStart="16dp"
            android:text="Connect Dropbox"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dropbox_state"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_link_black_64dp" />
    </LinearLayout>

    <View
        style="@style/Divider" />

    <LinearLayout
        android:id="@+id/meocloud"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/meocloud_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Connect MEO Cloud"
            android:paddingTop="20dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/meocloud_state"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_link_black_64dp" />

    </LinearLayout>

    <View
        style="@style/Divider" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="openListEmailActivity"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/email_black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Emails"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/num_emails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/number_of_emails"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>

    <View
        style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="openTrash">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/delete_icon_black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trash"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/num_deleted_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/number_of_delete_items"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>

    <View
        style="@style/Divider" />

</LinearLayout>
