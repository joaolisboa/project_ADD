<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ipleiria.project.add.SettingsActivity">

    <LinearLayout
        android:id="@+id/account_info"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:onClick="googleSignIn">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:contentDescription="@string/user_profile_picture"
            app:srcCompat="@drawable/ic_profile_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_name"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_margin="12dp"
                android:text="Anonymous"
                android:textColor="@android:color/primary_text_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/account_description"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:text="@string/google_sign_in_helper" />
        </LinearLayout>


        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/open_google_sign_in"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:id="@+id/dropbox"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/dropbox_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Connect Dropbox"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/dropbox_state"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            app:srcCompat="@drawable/ic_link_black_64dp" />
    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:id="@+id/meocloud"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/meocloud_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Connect MEO Cloud"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/meocloud_state"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            app:srcCompat="@drawable/ic_link_black_64dp" />

    </LinearLayout>

    <View style="@style/Divider" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:onClick="openListEmailActivity"
    android:orientation="horizontal">

        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:gravity="center"
                android:text="Edit Emails"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/num_emails"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="@string/number_of_emails"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:contentDescription="Expandable Icon"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:onClick="openTrash">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/delete_icon_black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Trash"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/num_deleted_items"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="@string/number_of_delete_items"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:contentDescription="Expandable Icon"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>

    <View style="@style/Divider" />

</LinearLayout>
